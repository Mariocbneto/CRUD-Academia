{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "types": ["node"],

    // Other Outputs
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    // Recommended Options
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
  }
  ,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "prisma.config.ts", "prisma/**/*", "src/generated/prisma"]
}
